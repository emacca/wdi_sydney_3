<%- model_class = Artist -%>
<div class="page-header">
  <h1><%= @artist.name %></h1>
</div>

  <div class="artist">
  <div class="artistimage">
  <%= image_tag @artist.image, :width => 400 %>
  </div>
  
  <p><strong>Members: </strong> <%= @artist.members %></p>
  <p><strong>Formed:</strong> <%= @artist.formed %></p>
  <h4><%= @artist.website %></h4>

  <p>Links</p>
  <%= link_to "See #{@artist.name}'s Albums", artist_albums_path(@artist) %>
  <%= link_to "See #{@artist.name}'s Songs", artist_songs_path(@artist) %>
  </div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              artists_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_artist_path(@artist), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              artist_path(@artist),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
