<%- model_class = Artist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

  <div class="artist">
    <% @artists.each do |artist| %>
    <h2><%= link_to artist.name, artist_path(artist) %></h2>
    <div class="bandimage">
    <%= image_tag artist.image, :width => 200 %>
    </div>
    <p><strong>Formed:</strong><%= artist.formed %></p>

     <strong><p>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_artist_path(artist), :class => 'btn btn-mini' %></p>
          <p><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      artist_path(artist),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></p></strong>

    <% end %>
  </div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_artist_path,
            :class => 'btn btn-primary' %>
