<%- model_class = Album -%>
<div class="page-header">
  <h1><%= @album.name %> by <%= @album.artist.name %></h1>
</div>

<div class="song">
<dl class="dl-horizontal">
  <div class="albumart">
  <%= image_tag @album.album_art, :width => 300 %>
  </div>
  <h2><%= @album.name %></h2>
  <h3><%= @album.artist.name %><br />
  <%= @album.year %></h3><br />
  <p><strong>Genre:</strong> <%= @album.genre %></p>


  <br /><br />
  <%= link_to "See songs in #{@album.name}", album_songs_path(@album) %>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              albums_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_album_path(@album), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              album_path(@album),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
