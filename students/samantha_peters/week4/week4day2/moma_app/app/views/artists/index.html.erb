<h1>MOMA - All Artists</h1>

<%= link_to 'Add an Artist', new_artist_path %>

<% @artists.each do |artist|%>
<div>
<h2><%= link_to artist.name, artist %></h2>
<p><%= artist.period %><br />
<%= artist.nationality %><br />
<%= artist.dob %><br />
<%= image_tag artist.image, :width => 150 %></p>
</div> 

<% end %>