<form action="/posts/<%= @post["id"] %>" method="post">
  <input type="hidden" name="_method" value="put"/>
  <label class="formtext" for="title">Title:</label>
  <input type="text" name="title" value="<%= @post['title'] %>" >

  <label class="formtext" for="description">Description:</label>
  <textarea type="text" name="description" value="<%= @post['description'] %>" rows="3" cols="40"></textarea>

  <label class="formtext" for="content">Content:</label>
  <textarea type="text" name="content" value="<%= @post['content'] %>" rows="10" cols="50"></textarea>

  <label class="formtext" for="author">Author:</label>
  <input type="text" name="author" value="<%= @post['author']%>">

  <button>Update Blog Post</button>

</form>