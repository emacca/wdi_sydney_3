<% unless @post.errors.empty? %>
<p><%= @post.errors.full_messages %></p>
<% end %>

<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="put"/>
  <label class="formtext" for="title">Title:</label>
  <input type="text" name="post[title]" value="<%= @post.title %>" >

  <label class="formtext" for="description">Description:</label>
  <textarea type="text" name="post[description]" rows="3" cols="40"><%= @post['description'] %></textarea>

  <label class="formtext" for="content">Content:</label>
  <textarea type="text" name="post[content]" rows="10" cols="50"><%= @post['content'] %></textarea>

  <label class="formtext" for="author">Author:</label>
  <input type="text" name="post[author]" value="<%= @post['author']%>">

  <button>Update Blog Post</button>

</form>