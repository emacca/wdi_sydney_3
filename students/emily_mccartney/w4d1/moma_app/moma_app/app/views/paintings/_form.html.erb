<%= form_for @painting do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %><br/>

  <%= f.label :year %>
  <%= f.text_field :year %><br/>

  <%= f.label :medium %>
  <%= f.text_field :medium %><br/>

  <%= f.label :style %>
  <%= f.text_field :style %><br/>

  <%= f.label :image %>
  <%= f.text_field :image %><br/>

  <%= f.label :artist %>
  <%= f.collection_select :artist_id, Artist.all, :id, :name, :include_blank => true %><br/><!-- pass in the aritst.all as it filters though then and the, the id is the artist id which is the value and then the name which is the name of the person -->

  <%= f.submit %>

<% end %>