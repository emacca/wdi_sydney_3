<%= form_for @post do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %><br/>

  <%= f.label :description %>
  <%= f.text_area :description %><br/>

  <%= f.label :content %>
  <%= f.text_area :content %><br/>

  <%= f.label :author %>
  <%= f.text_field :author %><br/>

  <%= f.submit %>

<% end %>