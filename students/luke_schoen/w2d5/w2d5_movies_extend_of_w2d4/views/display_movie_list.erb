<div>
    <form action="/display_movie_list" method="get">
        <input type="text" name="movie_name" autofocus>
        <button>Get Movie and Display List!</button>
    </form>

    <a href="/history.erb">Display History</a>

    <h1>Results</h1>
    <p><h3>Movie Name:</h3> <%= @movie_name %></p>
    <p><h3>Movie List (OMD):</h3> <%= @movie_name %></p>
    <table border="1" cellpadding="10" cellspacing="10">
        <tr>
            <th>Title
            </th>
            <th>Year
            </th>
            <th>ID
            </th>
            <th>Type
            </th>
            <th>Poster
            </th>
        </tr>
        <%
             @display_movie_list.each do |movie| 
            
        %>
        <tr>
            <td> <a href="<% movie["Website"] %>" target="new"><%= movie["Title"] %></a>
            </td>
            <td> <%= movie["Year"] %>
            </td>
            <td> <%= movie["imdbID"] %>
            </td>
            <td> <%= movie["Type"] %>
            </td>
            <td> <img src="<%= movie["Poster"] %>" width="100" height="100"> 
            	<%= puts movie["Website"] %>
            </td>
        </tr>
        <% end %>
    </table>

    
</div>