<h1>Artist list</h1>

<a href="/artists/new">new artist</a>   <!-- USE HELPER INSTEAD BELOW-->
<%= link_to 'New Artist', '/artists/new' %>


<% @artists.each do |artist| %>
	<div>
		<p><%= link_to artist.name, artist %></p> 
		<p><%= artist.period %></p>
		<p><%= artist.nationality %></p>
		<p><%= artist.dob %></p>
		<p><img src='<%= artist.image %>'></p>
	</div>
<% end %>