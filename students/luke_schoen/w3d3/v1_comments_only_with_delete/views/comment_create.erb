			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Abstract</th>
				<th>Created Date</th>
				<th>Details</th>
			</tr>

			<tr>
				<td>
		 	<%= @blog['id'] %>
		 		</td>
		 		<td class="table_desc_150"> 
			<%= @blog['title'] %> 
				</td>
				<td class="table_desc_150">
			<%= @blog['abstract'] %> 
				</td>
				<td class="table_desc_100">
			<%= @blog['created_at'] %> 
