<%# display individual blog post details%>
	
	<p>
		<form method='post' action="/comments/<%= @blog['id'] %>">
			<div class="details">
				<p><label for="c_comment">Comment:</label><p>
			</div>
			<div id="text_limit" class="details">
				<p><textarea id="text_limit_create2" name="c_comment" rows="1"></textarea></p> 
			</div>
			<div class="details">
				<p><label for="c_author">Author:</label></p>
			</div>
			<div class="details">
				<p><input class="input_limit2" type="text" name="c_author"></p>
			</div>
			<div>
				<p><button type="submit" class="btn btn-success">Create New Comment</button></p>
				</div>
		</form>
	</p>

</div>





