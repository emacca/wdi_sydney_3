<h1> Calc it! </h1>
<form action"/calc_form" method="get"> 			<!-- path that it goes to -->
	<label for="first">First number</label> 	<!-- 'for' - what this label is for -->
	<input type="text" name="first">

	<select name="operation"> 
												<!-- drop down selection - eventually we will get Ruby to -->
												<!-- generate these options - this must be spelt the same as :operation in main.rb -->
		<option>sum</option>
		<option>subtract</option>
		<option>product</option>
		<option>division</option>
	</select>
	<label for="second">Second number</label>
	<input type="text" name="second">

	<button>Calculate!</button>
</form>

<p>the <%= @operation %> of <%= @first %> and <%= @second %> is <%= @result %></p>