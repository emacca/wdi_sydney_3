<h1>Listing albums</h1>

<% if flash[:notice].present? %>
	<h1 style="color:green"><%= notice %></h1>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.description %></td>

		<td><%= link_to artist_path(album.artist) do %>
		  <%= image_tag album.image, height: '64', width: '64' %>
		<% end %></td>
        <td><%= link_to 'Show', album_path(album) %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_artist_album_path(@artist) %>
